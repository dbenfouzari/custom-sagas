{
  "name": "custom-sagas",
  "version": "0.0.1",
  "description": "Custom sagas",
  "main": "lib/index.js",
  "repository": "git@github.com:dbenfouzari/custom-sagas.git",
  "author": "Donovan BENFOUZARI <d.benfouzari@gmail.com>",
  "license": "GPL-3.0-only",
  "private": false,
  "scripts": {
    "build": "tsc --emitDeclarationOnly && babel src --out-dir lib --extensions \".ts,.tsx\"",
    "type-check": "tsc --noEmit",
    "test": "jest --env=jsdom --maxWorkers=4"
  },
  "peerDependencies": {
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.51",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-typescript": "^7.0.0-beta.51",
    "@types/jest": "^23.1.3",
    "jest": "^23.2.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts", "tsx", "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/**/*.(ts?(x)|js?(x))",
      "**/?(*.)+(spec|test).(ts|js)?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/!(*.container|index|types|createStore).?(ts|tsx)"
    ]
  }
}
